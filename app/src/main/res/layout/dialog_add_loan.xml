<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter details about your loan to start planning"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Loan Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLoanName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Loan Name (e.g., Student Loan)"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Original Principal -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:prefixText="R ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Original Principal Amount"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Current Balance -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:prefixText="R ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurrentBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Balance Remaining"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Interest Rate -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:suffixText=" %">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInterestRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Annual Interest Rate (APR)"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Minimum Payment -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:prefixText="R ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMinPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimum Monthly Payment"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>