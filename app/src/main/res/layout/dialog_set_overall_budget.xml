<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your overall monthly budget limits"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <!-- Minimum Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary"
        app:prefixText="R ">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMinAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Amount"
            android:inputType="numberDecimal"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Maximum Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary"
        app:prefixText="R ">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMaxAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Amount"
            android:inputType="numberDecimal"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ðŸ’¡ Tip: Set a minimum for savings goals and a maximum to control overspending"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

</LinearLayout>